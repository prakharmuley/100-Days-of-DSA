Problem Link: https://leetcode.com/problems/contiguous-array/



class Solution {
    public int findMaxLength(int[] nums) {
        int n=nums.length;
        
        if(n==1) return 0;
        
        int z=0;
        int o=0;
        int ans=0;
        for(int x: nums)
        {
            if(x==1) o++;
            else z++;
            
            if(o>0&&z>0)
            {
                ans=2*Math.min(o,z);
            }
        }
        return ans;
        
    }
}
